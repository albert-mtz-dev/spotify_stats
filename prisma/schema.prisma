generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Auth.js / NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Spotify data relations
  spotifySnapshots SpotifySnapshot[]
  listeningHistory ListeningHistory[]
  badges           UserBadge[]

  // Social/Profile fields
  username                String?           @unique
  bio                     String?           @db.VarChar(160)
  profileVisibility       ProfileVisibility @default(PUBLIC)
  lastSyncedAt            DateTime?
  hasCompletedOnboarding  Boolean           @default(false)

  // Privacy controls - what to share on profile
  shareTopArtists     Boolean @default(true)
  shareTopTracks      Boolean @default(true)
  shareGenres         Boolean @default(true)
  shareAudioProfile   Boolean @default(true)
  shareBadges         Boolean @default(true)
  shareListeningStats Boolean @default(true)
  sharePatterns       Boolean @default(false)
  shareRecentlyPlayed Boolean @default(false)
  allowComparison     Boolean @default(true)

  // Following relationships
  followers            Follow[]        @relation("UserFollowers")
  following            Follow[]        @relation("UserFollowing")
  followRequestsSent   FollowRequest[] @relation("FollowRequestsSent")
  followRequestsReceived FollowRequest[] @relation("FollowRequestsReceived")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([profileVisibility])
  @@index([username])
}

enum ProfileVisibility {
  PUBLIC
  FOLLOWERS
  PRIVATE
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model FollowRequest {
  id         String        @id @default(cuid())
  fromUserId String
  toUserId   String
  status     RequestStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  from User @relation("FollowRequestsSent", fields: [fromUserId], references: [id], onDelete: Cascade)
  to   User @relation("FollowRequestsReceived", fields: [toUserId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, toUserId])
  @@index([toUserId, status])
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Spotify data models
model SpotifySnapshot {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  timeRange String   // short_term, medium_term, long_term
  type      String   // artists, tracks

  data      Json     // Stores the full API response summary

  createdAt DateTime @default(now())

  @@index([userId, timeRange, type])
}

model ListeningHistory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  trackId   String
  trackName String
  artistNames String[]
  albumName String
  playedAt  DateTime
  durationMs Int

  createdAt DateTime @default(now())

  @@index([userId, playedAt])
  @@unique([userId, trackId, playedAt])
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  badgeId   String
  earnedAt  DateTime @default(now())

  @@unique([userId, badgeId])
}
